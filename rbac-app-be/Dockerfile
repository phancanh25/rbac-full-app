# Stage 1: Build the Spring Boot application using Maven
FROM maven:3.8.6-openjdk-21-slim AS builder
WORKDIR /app
# Copy only the Maven descriptor first for better cache utilization
COPY pom.xml .
# Download dependencies (cache layer)
RUN mvn dependency:go-offline -B
# Copy the source code
COPY src ./src
# Package the application (skip tests for faster build)
RUN mvn clean package -DskipTests

# Stage 2: Create the runtime image using a JRE
FROM eclipse-temurin:21-jre-alpine
WORKDIR /app
# Replace 'your-app.jar' with the actual jar file name generated by Maven
COPY --from=builder /app/target/your-app.jar app.jar
EXPOSE 8080
ENTRYPOINT ["java", "-jar", "app.jar"]
